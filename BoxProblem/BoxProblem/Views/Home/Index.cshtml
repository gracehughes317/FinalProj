@using BoxProblem.Data
@model List<BoxInventory>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Home</h2>
<button onclick="location.href='@Url.Action("Add", "Home")'">Add</button>
<button onclick="location.href='@Url.Action("Edit", "Home")'">Edit</button>


<p>Inventory</p>
<div>
    <table>
        <tr class="tableHeader">
            <th><span class="sortObj">inv  </span> </th>
            <th><span class="sortObj">cost  </span></th>
            <th><span class="sortObj">volume  </span></th>
            <th><span class="sortObj">weight  </span></th>
            <th><span class="sortObj">liquid  </span></th>
            <th><br /></th>
        </tr>

        @foreach (BoxInventory box in Model)
        {
            <tr>
                <th>@box.InventoryCount</th>
                <th>@box.Cost</th>
                <th>@box.Volume</th>
                <th>@box.Weight</th>
                <th>@box.CanHoldLiquid</th>
            </tr>
        } 
    </table>

</div>
